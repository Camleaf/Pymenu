// EVERYTHING MUST HAVE ITS OWN LINE OR COMPILER WILL THROW AN ERROR.
;;styles < './tests/abcd.json'


;$heightState < '100'
;$textState < 'warblerrreuios'


>frame id='welcome'
    >div class='abc' style='width:100/height:$$heightState' id='abc'
    
        >text id='hi' modifiable='False'
            $$textState
        >/text

        // Maybe I could try to add the double | symbol for newline syntax. That would be a later thing though

        >image src='pathdetectionnotworking'
        >/image


        ;;markdown < './tests/efgh.pym'
    >/div

    ;;markdown < './tests/efgh.pym'
>/frame

// In this version of Pymenu, frames will be able to layer on top of each other, hence "popup"
// Frames are stylable. They default to filling the whole screen with a transparent color, located at top-left
// They can be edited to suit your needs

>frame id='popup' 

    >div style='width:20/height:20/position:absolute/top:40/left:20' id='rgb'
        >text modifiable='False' id='PopupText'
            This is a Popup window!
        >/text
    >/div

>/frame